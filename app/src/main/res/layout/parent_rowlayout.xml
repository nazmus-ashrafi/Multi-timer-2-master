<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"

    android:layout_marginBottom="0dp"

    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"


    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/cardColorBlueL">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Step Name"
                    android:gravity="center"
                    android:textColor="@color/colorTextBlack"
                    android:fontFamily="@font/caveat_bold"
                    android:textSize="20sp"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:id="@+id/stepname"
                    />

                <TextView
                    android:id="@+id/steptotaltime"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/caveat_bold"
                    android:gravity="center"
                    android:text="Total time : 02 hr:50 min"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ChildRV"
                android:layout_margin="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/bt_ui_readmore"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"

                    android:text="Delete"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBackground"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bt_ui_readmore"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:layout_marginLeft="35dp"

                    android:text="Load"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBackground"
                    android:textSize="22sp" />
            </LinearLayout>





        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>