    <Button
        android:id="@+id/btnplaytimer"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bt_start"
        android:onClick="onStartTimerClick"
        android:stateListAnimator="@null"
        android:text="Play"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/skipBtnRun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="38dp"
        android:background="@drawable/bt_ui_readmore"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"

        android:text="Skip"
        android:textAllCaps="false"
        android:textColor="@color/colorBackground"

        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/footer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnRemoveRun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="25dp"
        android:text="Remove"
        app:layout_constraintBottom_toTopOf="@+id/footer"
        app:layout_constraintEnd_toStartOf="@+id/skipBtnRun"
        app:layout_constraintStart_toStartOf="parent"

        android:textAllCaps="false"
        android:textColor="@color/colorBackground"
        android:textSize="22sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/bt_ui_readmore"

    />

<Button
    android:id="@+id/btnEditRun"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="30dp"
    android:layout_marginBottom="27dp"
    android:text="Edit"
    app:layout_constraintBottom_toTopOf="@+id/footer"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/skipBtnRun"

    android:textAllCaps="false"
    android:textColor="@color/colorBackground"
    android:textSize="22sp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/bt_ui_readmore"

    />


</androidx.constraintlayout.widget.ConstraintLayout>